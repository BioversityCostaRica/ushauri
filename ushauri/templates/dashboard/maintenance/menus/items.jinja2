{% extends 'dashboard/index.jinja2' %}

{% block breadcrumbs %}
    <div class="col-sm-12">
        <h2>{{ _("Ushauri - Maintenance") }}</h2>
        <ol class="breadcrumb">
            {% block breadcrumbitems %}
                <li>
                    <a href="{{ request.route_url('dashboard') }}">{{ _("Main Dashboard") }}</a>
                </li>
                <li>
                    Maintenance
                </li>
                <li>
                    <a href="{{ request.route_url('menus') }}">{{ _("IVR Menus") }}</a>
                </li>
                <li class="active">
                    <a href="{{ request.route_url('items',menu=menuid) }}">{{ _("Items in") }} "{{ menuname }}"</a>
                </li>
            {% endblock breadcrumbitems %}
        </ol>
    </div>
{% endblock breadcrumbs %}

{% block maincontent %}
    <div class="row">
        <div class="col-md-10">
        </div>
        <div class="col-md-2">
            <button type="button" onclick="location.href='{{ request.route_url('additem',menu=menuid) }}';" class="btn btn-primary btn-block">Add item</button>
        </div>
        <hr>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tbody>
                    <tr>
                        <th class="text-center">{{ _('Name') }}</th>
                        <th class="text-center">{{ _('Type') }}</th>
                        <th class="text-center">{{ _('Content') }}</th>
                        <th class="text-center">{{ _('Next item') }}</th>
                        <th class="text-center">{{ _('Actions') }}</th>
                    </tr>
                    {% for item in items %}
                        <tr>
                            <td>
                                {{ item.item_name }} {% if item.item_start == 1 %}<span class="label label-success">Start</span>{% endif %}
                            </td>
                            <td>
                                {% if item.item_type == 1 %}Prompt{% endif %}
                                {% if item.item_type == 2 %}Gather voice{% endif %}
                                {% if item.item_type == 3 %}Content{% endif %}
                            </td>
                            <td>
                                <span title="{{ item.item_desc }}">{{ item.item_desc|truncate(44, True) }}</span>
                            </td>
                            <td>
                                {{ item.next_item }}
                            </td>
                            <td class="project-actions">
                                {% if item.item_type == 1 %}
                                    <button class="btn btn-default btn-circle" onclick="location.href='{{ request.route_url('responses',menu=menuid,item=item.item_id) }}';" type="button" title="Edit responses"><i class="fa fa-list"></i></button>
                                {% endif %}
                                <button class="btn btn-default btn-circle" onclick="ShowConfirmModal('{{ request.route_url('itemstart',menu=menuid,item=item.item_id) }}','Set item as start','Do you want to set the item {{ item.item_name }} as start?')" type="button" title="Set as start"><i class="fa fa-play"></i></button>
                                <button class="btn btn-warning btn-circle" onclick="location.href='{{ request.route_url('edititem',menu=menuid,item=item.item_id) }}';" type="button" title="Modify"><i class="fa fa-edit"></i></button>
                                <button class="btn btn-danger btn-circle" onclick="ShowConfirmModal('{{ request.route_url('deleteitem',menu=menuid,item=item.item_id) }}','Delete item','Do you want to delete the item {{ item.item_name }}?')" type="button" title="Delete"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock maincontent %}

{% block bodybottom %}
    <div class="modal inmodal fade" id="confirm" tabindex="-1" role="dialog"  aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="confirm_title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="urlforpost">
                    <input type="hidden" id="confirmcrftoken" value="{{ request.session.get_csrf_token() }}">
                    <p id="confirm_content"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                    <button type="button" onclick="proceed();" class="btn btn-primary">Confirm</button>
                </div>
            </div>
        </div>
    </div>
{% endblock bodybottom %}

{% block mainscripts %}
    {% jsresource request,'dashboard','confirm' %}
{% endblock mainscripts %}