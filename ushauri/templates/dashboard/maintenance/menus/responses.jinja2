{% extends 'dashboard/index.jinja2' %}

{% block breadcrumbs %}
    <div class="col-sm-12">
        <h2>{{ _("Ushauri - Maintenance") }}</h2>
        <ol class="breadcrumb">
            {% block breadcrumbitems %}
                <li>
                    <a href="{{ request.route_url('dashboard') }}">{{ _("Main Dashboard") }}</a>
                </li>
                <li>
                    Maintenance
                </li>
                <li>
                    <a href="{{ request.route_url('menus') }}">{{ _("IVR Menus") }}</a>
                </li>
                <li>
                    <a href="{{ request.route_url('items',menu=menuid) }}">{{ _("Items in") }} "{{ menuname }}"</a>
                </li>
                <li class="active">
                            <a href="{{ request.route_url('responses',menu=menuid,item=itemid) }}">{{ _("Responses in ") }} "{{ itemname }}"</a>
                </li>
            {% endblock breadcrumbitems %}
        </ol>
    </div>
{% endblock breadcrumbs %}

{% block maincontent %}
    <div class="row">
        <div class="col-md-10">
        </div>
        <div class="col-md-2">
            <button type="button" onclick="location.href='{{ request.route_url('addresponse',menu=menuid,item=itemid) }}';" class="btn btn-primary btn-block">Add response</button>
        </div>
        <hr>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tbody>
                    <tr>
                        <th class="text-center">{{ _('Number') }}</th>
                        <th class="text-center">{{ _('Target item') }}</th>
                        <th class="text-center">{{ _('Actions') }}</th>
                    </tr>
                    {% for response in responses %}
                        <tr>
                            <td>
                                {{ response.resp_num }}
                            </td>
                            <td>
                                {{ response.target_item }}
                            </td>
                            <td class="project-actions">
                                <button class="btn btn-danger btn-circle" onclick="ShowConfirmModal('{{ request.route_url('deleteresponse',menu=menuid,item=itemid,resp=response.resp_num) }}','Delete response','Do you want to delete the response {{ response.resp_num }}?')" type="button" title="Delete"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock maincontent %}

{% block bodybottom %}
    <div class="modal inmodal fade" id="confirm" tabindex="-1" role="dialog"  aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="confirm_title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="urlforpost">
                    <input type="hidden" id="confirmcrftoken" value="{{ request.session.get_csrf_token() }}">
                    <p id="confirm_content"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                    <button type="button" onclick="proceed();" class="btn btn-primary">Confirm</button>
                </div>
            </div>
        </div>
    </div>
{% endblock bodybottom %}

{% block mainscripts %}
    {% jsresource request,'dashboard','confirm' %}
{% endblock mainscripts %}